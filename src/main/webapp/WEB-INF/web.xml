<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <session-config>
        <tracking-mode>COOKIE</tracking-mode>
        <session-timeout>60</session-timeout>
    </session-config>

    <filter-mapping>
        <filter-name>CheckAuthenticationFilter</filter-name>
        <url-pattern>/my-order</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>SetCurrentRequestUrlFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <filter-mapping>
        <filter-name>ErrorHandlerFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>TrimResponseFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AutoRestoreShoppingCartFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


</web-app>